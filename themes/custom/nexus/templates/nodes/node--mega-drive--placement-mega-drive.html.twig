{% if drive_flag !=  '1' %}
{% set field_event_drive_gallery=content.field_event_drive_gallery %}
{% set field_drive_video_url=content.field_drive_video_url[0]['#context']['value'] %}
{% set field_live_streaming_url=content.field_live_streaming_url[0]['#context']['value'] %} 
<section class="mega_drive bgdrive">
    <div class="containerbox">
        <div class="col-lg-6 p-0">
            <div class="imgvideowrap">
                <figure class="w-100 if_video">
                    {% if field_drive_video_url %}
                        <a data-id={{field_drive_video_url}} class="playicon megadriveplay"
                            href="javascript:void(0)" data-toggle="modal"
                            data-target="#field_drive_video_url-{{ node.id }}">
                            <img
                                src="{{ base_url }}themes/custom/nexus/assets/images/icon-play.png">
                        </a>

                        <div class="modal fade" id="field_drive_video_url-{{ node.id }}"  role="dialog">
                            <div class="modal-dialog modal-lg">
                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close megadriveclose"
                                            data-dismiss="modal">
                                            &times;
                                        </button>
                                    </div>
                                    <div class="modal-body megadriveplaydiv">
                                        <iframe class="lozadsingle" data-index="1" width="100%" height="100%" data-src="{{ field_drive_video_url }}"  frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                    <img src="{{ content.field_video_thumbnail[0] }}"
                        class="img-responsive" />
                    {#<figcaption>
                         <span>{{ content.field_drive_date[0]['#text'] | date("dS M") }}

                             {{ content.field_drive_end_date[0]['#text'] |  date("dS M") }}
                         </span>
                    </figcaption>#}
                    {% if field_live_streaming_url %}
                        <a data-id={{field_live_streaming_url}} href="javascript:void(0)" class="videoicon megadriveplay"
                            data-toggle="modal"
                            data-target="#field_live_streaming_url-{{ node.id }}"><img
                                src="{{ base_url }}/themes/custom/nexus/assets/images/icon-video.png">
                            <span>Live streaming available</span></a>
                    {% endif %}
                </figure>
            </div>
            {{ content.field_event_drive_gallery }}
        </div>
        <div class="col-lg-6 p-0">
            <div class="megadrive_content">
                <div class="headding text-left">
                    <h2>{{ label }}</h2>
                    <span class="underline"></span></div>
                <div class="content">
                    <p>{{ content.body }}</p>
                    <p>
                        <strong>Venue:</strong> {{ content.field_venue[0]['#context']['value'] }}
                    </p>
                    <p>
                        <strong>Recruiter:</strong> {{ content.field_recruiter[0]['#context']['value'] }}
                    </p>

                     <p class="md-date"><img src="{{ base_url }}themes/custom/nexus/assets/images/icon-date.png">

                         {{ content.field_drive_date[0]['#text'] | date("dS M") }}
                         {% if(content.field_drive_end_date[0]['#text'] != '') %}
                         - {{ content.field_drive_end_date[0]['#text'] |  date("dS M") }}
                         {% endif %}

                    </p>

                    {# <p class="share_row"><span> Share this event:</span> <a
                            href="https://www.facebook.com/sharer/sharer.php?u={{ url('<current>') }}&title={{ node.label }}" target="_blank" title="{{ 'Share to'|t }} Facebook"><i class="fab fa-facebook-f"></i></a> <a
                            href="http://twitter.com/home?status={{ node.label }}+{{ url('<current>') }}" target="_blank" title="{{ 'Share to'|t }} Twitter"><i class="fab fa-twitter"></i></a></p>
                            #}
                </div>
            </div>
        </div>
		<div class="clr"></div>
    </div>
</section>
<div class="modal fade" id="field_live_streaming_url-{{ node.id }}"
    role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close megadriveclose" data-dismiss="modal">
                    &times;
                </button>
            </div>
            <div class="modal-body megadriveplaydiv">
                <iframe width="100%" height="100%" class="lozadsingle" data-index="1"  data-src="{{ field_live_streaming_url }}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>

{% endif %}