              <source class="img-responsive js-lazyload-image desktop-hide" data-srcset="{{ webp_image_get(fields.field_mobile_image.content) }}" type="image/webp" srcset="/sites/default/files/transparentimg.jpg" alt="{{ fields.title.content }}"/>
