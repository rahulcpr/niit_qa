{% set video_url= content.field_gallery_video[0]['#context']['value'] %}
{% set image_url=content.field_drive_images[0]['#markup'] %}
{% if video_url %}
	<div class="imgvideowrap1">
    <figure class="w-50 pull-left"> 
       
        <a data-id={{video_url}} class="playicon megadriveplay" href="javascript:void(0)" data-toggle="modal" data-target="#field_gallery_video-{{ paragraph.id() }}">
            <img src="{{ base_url }}/themes/custom/nexus/assets/images/icon-play.png" class="img-responsive" alt="img" />
        </a>
		<img src="{{ image_url }}" class="img-responsive">
    </figure>
	</div>
    <div class="modal fade" id="field_gallery_video-{{ paragraph.id() }}" 
        role="dialog">
        <div class="modal-dialog modal-lg">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close megadriveclose" data-dismiss="modal">
                        &times;
                    </button>
                </div>
                <div class="modal-body megadriveplaydiv">
                    <iframe width="100%" height="100%"
                        src="{{ video_url }}"
                        frameborder="0" allow="autoplay; encrypted-media"
                        allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>
{% else %}
<div class="imgvideowrap1">
    <figure class="w-50 pull-left">
	   
        {% if video_url != '' %}
		<a class="playicon" href="javascript:void(0)" data-toggle="modal" data-target="#field_gallery_video-{{ paragraph.id() }}">
            <img src="{{ base_url }}/themes/custom/nexus/assets/images/icon-play.png" class="img-responsive" alt="img" />
        </a>
       {% endif %} 

		<img src="{{ image_url }}" class="img-responsive">
	
	</figure>
</div>
{% endif %}


